import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

public class IODataFile {

	public static void guardarAutomata(AutomataFinito automataFinito, String nombreAutomata) {

		try {
			FileOutputStream fileOutputStream = new FileOutputStream(nombreAutomata + ".ser");
			ObjectOutputStream objectOutputStream = new ObjectOutputStream(fileOutputStream);
			objectOutputStream.writeObject(automataFinito);
			objectOutputStream.close();
		} catch (IOException e) {
			e.printStackTrace();
		}

	}

	public static AutomataFinito recuperarAutomata(String nombreAutomata) throws AutomataNoEncontradoException {
		try {
			ObjectInputStream objectInputStream = new ObjectInputStream(new FileInputStream(nombreAutomata + ".ser"));
			AutomataFinito automataFinito = (AutomataFinito) objectInputStream.readObject();
			objectInputStream.close();
			System.out.println("El automata fue recuperado con exito.");
			return automataFinito;
		} catch (Exception e) {
			throw new AutomataNoEncontradoException(
					"Lo sentimos, no se encontro ningun automata bajo el nombre \"" + nombreAutomata + "\".");
		}
	}

	public static class AutomataNoEncontradoException extends Exception {
		/**
		 *
		 */
		private static final long serialVersionUID = 1L;

		public AutomataNoEncontradoException(String mensaje) {
			super(mensaje);
		}
	}

}
